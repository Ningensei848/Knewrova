# --- テキストファイルは LF に統一 ---
*.md     text eol=lf
*.txt    text eol=lf
*.json   text eol=lf
*.yaml   text eol=lf
*.yml    text eol=lf
*.csv    text eol=lf
*.tsv    text eol=lf
*.xml    text eol=lf
*.ini    text eol=lf
*.conf   text eol=lf
*.toml   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.py     text eol=lf
*.sh     text eol=lf
*.eml    text eol=lf
*.srt    text eol=lf
*.vtt    text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf
.gitattributes text eol=lf

# --- CRLF が必須なファイル（例外） ---
*.bat    text eol=crlf

